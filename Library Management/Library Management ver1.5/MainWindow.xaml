<Window x:Class="Library_Management_ver1._5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_ver1._5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="xx市-市图书馆" FontSize="18" HorizontalAlignment="Center" Margin="5"/>

        <StackPanel Grid.Row="1" Background="#0078d4">
            <TextBlock Text="登录" FontSize="22" HorizontalAlignment="Center" Foreground="White" Margin="5"/>
        </StackPanel>

        <Grid Grid.Row="3" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="用户名" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="2" VerticalAlignment="Center" Text="{Binding UserName}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="密码" VerticalAlignment="Center"/>
            <!--<TextBox Grid.Row="1" Grid.Column="1" Margin="2" VerticalAlignment="Center" Text="{Binding Password}"/>-->
            <PasswordBox Grid.Row="1" Grid.Column="1" Margin="2" VerticalAlignment="Center"
                         local:PasswordBoxHelper.Pwd="{Binding Password,Mode=TwoWay}"
                         local:PasswordBoxHelper.IsEnablePasswordPropertyChanged="True"/>

            <CheckBox Grid.ColumnSpan="2" Grid.Row="2" Content="记住密码" VerticalAlignment="Center"/>

            <local:CustomButton Grid.Row="3" Content="登录" Grid.ColumnSpan="2" Background="#3c7ff8" Foreground="White"
                                ButtonCornerRadius="10" Command="{Binding LoginAction}"
                                BackgroundHover="DarkBlue" BackgroundPressed="YellowGreen"/>
        </Grid>
    </Grid>
</Window>
